<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bigsteptech.covidtracker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.bigsteptech.covidtracker.CovidApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CovidTracker">
        <activity
            android:name="com.bigsteptech.covidtracker.ui.tweets.TweetActivity"
            android:parentActivityName="com.bigsteptech.covidtracker.ui.search.CovidTrackerActivity"/>
        <activity android:name="com.bigsteptech.covidtracker.ui.search.CovidTrackerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>