    </style>

    <style name="Body1.Light.White" parent="Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body2.Light.White" parent="Light">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Body1.Medium" parent="Medium">
